<idea-plugin>
    <id>com.github.davidsteinsland.postgresvault</id>
    <name>Vault Auth</name>
    <vendor>davidsteinsland</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.database</depends>


    <extensions defaultExtensionNs="com.intellij.database">
        <connectionInterceptor implementation="com.github.davidsteinsland.postgresvault.VaultAuth" order="first"/>
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.davidsteinsland.postgresvault.AppSettingsState"/>

        <applicationConfigurable parentId="tools" instance="com.github.davidsteinsland.postgresvault.AppSettingsConfigurable"
                                 id="com.github.davidsteinsland.postgresvault.AppSettingsConfigurable"
                                 displayName="Vault"/>
    </extensions>
</idea-plugin>
